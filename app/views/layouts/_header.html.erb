<!-- Navbar Partial _header.html.erb-->
<nav class="navbar navbar-expand-lg navbar-light bg-light">
  <div class="container-fluid">
    <a class="navbar-brand" href="#"><%= link_to 'JeJu Book', root_path %></a>
    <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNav" aria-controls="navbarNav" aria-expanded="false" aria-label="Toggle navigation">
      <span class="navbar-toggler-icon"></span>
    </button>
    <div class="collapse navbar-collapse" id="navbarNav">
      <ul class="navbar-nav me-auto mb-2 mb-lg-0">
        <li class="nav-item">
          <%= link_to 'Home', root_path, class: "nav-link" %>
        </li>
        <li class="nav-item">
          <%= link_to 'Book List', books_path, class: "nav-link" %>
        </li>
        <% if user_signed_in? %>
          <li class="nav-item">
            <%= link_to 'My Page', user_path(current_user), class: "nav-link" %>
          </li>
          <li class="nav-item">
            <%= link_to 'Borrow', loans_path, class: "nav-link" %>
          </li>
          <% if current_user.admin? %>
            <li class="nav-item">
              <%= link_to 'Add Book', new_admin_book_path, class: "nav-link" %>
            </li>
            <li class="nav-item">
              <%= link_to 'Edit Book', edit_admin_book_path(1), class: "nav-link" %> <!-- 예시로 1번 책 수정 -->
            </li>
            <li class="nav-item">
              <%= link_to 'Delete Book', admin_book_path(1), method: :delete, class: "nav-link" %> <!-- 예시로 1번 책 삭제 -->
            </li>
            <li class="nav-item">
              <%= link_to 'Set Default Loan Period', admin_default_loan_period_path, class: "nav-link" %>
            </li>
            <li class="nav-item">
              <%= link_to 'Set Default Book Image', admin_default_book_image_path, class: "nav-link" %>
            </li>
          <% end %>
        <% end %>
      </ul>
      <div class="d-flex">
        <% if user_signed_in? %>
          <span class="navbar-text me-2">Hello, <%= current_user.nickname %> (<%= current_user.user_type %>)</span>
          <%= link_to 'Logout', destroy_user_session_path, data: { turbo_method: :delete }, class: "btn btn-outline-danger me-2" %>
        <% else %>
          <%= link_to 'Log In', new_user_session_path, class: "btn btn-outline-primary me-2" %>
          <%= link_to 'Sign Up', new_user_registration_path, class: "btn btn-primary" %>
        <% end %>
      </div>
    </div>
  </div>
</nav>